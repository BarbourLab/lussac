{
	"recording": {
		"file": "$PARAMS_FOLDER/recording.dat",
		"sampling_rate": 30000,
		"dtype": "int16",
		"n_channels": 64,
		"uvolt": 0.195,
		"prb": "$PARAMS_FOLDER/arch.prb"
	},
	"spike_sorting": {
		"MountainSort4": {
			"output_folder": "$PARAMS_FOLDER/lussac/output",
			"runs": [
				{"name": "ms4", "params": {"clip_size": 60, "freq_min": 150, "freq_max": 6000, "detect_sign": 0, "adjacency_radius": 51, "detect_threshold": 3, "detect_interval": 10, "whiten": true, "curation": false, "filter": true, "noise_overlap_threshold": 0.6, "num_workers": 10}}
			]
		},
		"MountainSort3": {
			"output_folder": "$PARAMS_FOLDER/lussac/output",
			"runs": [
				{"name": "ms3", "params": {"clip_size": 60, "freq_min": 150, "freq_max": 6000, "freq_wid": 300, "samplerate": 30000, "detect_sign": 0, "detect_threshold": 3, "adjacency_radius": 51, "detect_interval": 10, "consolidation_factor": 0.9, "fit_stage": "true", "whiten": "true", "curate": "false", "noise_overlap_threshold": 0.6, "num_workers": 1}}
			]
		},
		"Kilosort2": {
			"output_folder": "$PARAMS_FOLDER/lussac/output",
			"runs": [
				{"name": "ks2_default", "params": {}},
				{"name": "ks2_best", "params": {"projection_threshold": [8, 3], "detect_threshold": 5}},
				{"name": "ks2_low_thresh", "params": {"projection_threshold": [5, 3], "detect_threshold": 5}}
			]
		}
	},
	"phy_folders": [
		
	],
	"post_processing": {
		"tmp_folder": "/tmp/lussac/",
		"logs_folder": "$PARAMS_FOLDER/lussac/logs",
		"pipeline": {
			"units_categorization": {
				"spikes": {
					"frequency": [0.5, 250.0],
					"contamination": {
						"refractory_period": [0.3, 0.9],
						"max": 0.35
					}
				}
			},
			"remove_bad_units": {
				"rest": {
					"all": {}
				},
				"spikes": {
					"amplitude": {
						"filter": [2, 600, 9000],
						"min": 10,
						"waveforms": {
							"ms_before": 2.0,
							"ms_after": 2.0,
							"max_spikes_per_unit": 4000,
							"max_channels_per_waveforms": 64
						}
					}
				}
			},
			"center_cluster": {
				"spikes": {
					"filter": [2, 300, 9000],
					"waveforms": {
						"ms_before": 1.5,
						"ms_after": 1.5,
						"max_spikes_per_unit": 5000,
						"max_channels_per_waveforms": 5
					}
				}
			},
			"remove_duplicates": {
				"spikes": {
					"window": 0.2,
					"waveforms": {
						"ms_before": 1.2,
						"ms_after": 1.2
					}
				}
			},
			"merge_clusters": {
				"spikes": {
					"refractory_period": [0.3, 0.9],
					"correlogram_check": {
						"max_time": 75.0,
						"bin_size": 0.3,
						"filter": [2, 800],
						"similarity": 0.8,
						"window": {
							"type": "adaptative",
							"limit": 55.0,
							"filter": [2, 600],
							"threshold_mean": 0.5
						}
					},
					"waveform_validation": {
						"similarity": 0.75,
						"filter": [2, 300, 6000],
						"waveforms": {
							"ms_before": 1.2,
							"ms_after": 1.2,
							"max_spikes_per_unit": 10000,
							"max_channels_per_waveforms": 5
						},
						"n_process": 6
					},
					"plot_similarity": true
				}
			},
			"remove_duplicates_2": {
				"spikes": {
					"window": 0.25,
					"waveforms": {
						"ms_before": 1.2,
						"ms_after": 1.2
					}
				}
			},
			"export_sortings": {
				"path": "$PARAMS_FOLDER/lussac/outputs",
				"export_params": {

				},
				"refractory_period": {
					"MS": [0.3, 0.9],
					"spikes": [0.3, 0.9]
				}
			},
			"merge_sortings": {
				"spikes": {
					"refractory_period": [0.3, 0.9],
					"duplicated_spike": 0.3,
					"similarity_validation": {
						"window": 0.14,
						"min_similarity": 0.4,
						"n_process": 6
					},
					"correlogram_validation": {
						"max_time": 75.0,
						"bin_size": 0.3,
						"filter": [2, 800],
						"similarity": 0.85,
						"window": {
							"type": "adaptative",
							"limit": 55.0,
							"filter": [2, 600],
							"threshold_mean": 0.5
						}
					},
					"waveform_validation": {
						"similarity": 0.80,
						"filter": [2, 300, 6000],
						"waveforms": {
							"ms_before": 1.2,
							"ms_after": 1.2,
							"max_spikes_per_unit": 5000,
							"max_channels_per_waveforms": 5
						},
						"n_process": 6
					},
					"only_agreed_units": true,
					"plot_units": {
						"max_time": 40.0
					}
				}
			},
			"units_categorization_2": {
				"spikes": {
					"frequency": [0.5, 250.0],
					"contamination": {
						"refractory_period": [0.3, 0.9],
						"max": 0.35
					}
				}
			},
			"remove_bad_units_3": {
				"spikes": {
					"contamination": {
						"refractory_period": [0.3, 0.9],
						"max": 0.25
					}
				},
				"rest": {
					"all": {}
				}
			},
			"export": {
				"path": "$PARAMS_FOLDER/lussac/final_output",
				"export_params": {

				},
				"refractory_period": {
					"MS": [0.3, 0.9],
					"spikes": [0.3, 0.9]
				}
			}
		}
	}
}
